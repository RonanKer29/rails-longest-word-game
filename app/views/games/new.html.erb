<h1>New Game</h1>

<ul class="list-group list-group-horizontal-md">
  <% @letters.each do |letter| %>
    <li class="list-group-item text-white me-2 shadow-lg"><%= letter %></li>
  <% end %>
</ul>
<form  action="/score" method="post" data-turbo="false">
  <div class="form-group mt-3">
    <label for="answer">What is the longest word you can find ?</label>
    <input type="text" class="form-control" name="word" id="text" placeholder="Enter Word">
    <button class="btn btn-primary mt-2" type="submit">Submit</button>
    <%= hidden_field_tag 'letters', @letters.join %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </div>
  </form>
